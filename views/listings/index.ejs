    <style>
      #filters{
        display: flex;
        flex-wrap: wrap;
      }
      .filter{
        text-align: center;
        margin-right: 2rem;
        margin-top: 2rem;
        margin-bottom: 1rem;
        opacity: 0.7;
      }

      .filter:hover{
        opacity: 1;
        cursor: pointer;
      }

      .filter p {
        font-size: 0.8rem;
      }
    </style>

    <div id="filters">
      <div class="filter">
        <div><i class="fa-solid fa-fire"></i></div>
        <p>Trending</p>
      </div>

      <div class="filter">
        <div><i class="fa-solid fa-bed"></i></div>
        <p>Rooms</p>
      </div>

      <div class="filter">
        <div><i class="fa-solid fa-city"></i></div>
        <p>Cities</p>
      </div>

      <div class="filter">
        <div><i class="fa-solid fa-mountain-sun"></i></div>
        <p>Mountains</p>
      </div>

      <div class="filter">
        <div><i class="fa-solid fa-umbrella-beach"></i></div>
        <p>Beach</p>
      </div>

      <div class="filter">
        <div><i class="fa-solid fa-person-swimming"></i></div>
        <p>Amaising Pools</p>
      </div>

      <div class="filter">
        <div><i class="fa-solid fa-snowflake"></i></i></div>
        <p>Arctic</p>
      </div>

      <div class="filter">
        <div><i class="fa-solid fa-tractor"></i></i></div>
        <p>Farm</p>
      </div>

      <div class="filter">
        <div><i class="fa-solid fa-campground"></i></i></div>
        <p>Camoing</p>
      </div>
     
      <div class="tax-toggle filter">
        <div class="form-check-reverse form-switch">
  <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
  <label class="form-check-label" for="switchCheckDefault">Display Total After Taxes</label>
</div>
      </div>
      


    </div>

    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
<% for(let listing of allListings){ %>
  <a href="/listings/<%=listing._id%>" class="listing-links">
    <div class="listing-card" >
  <img src="<%=listing.image.url%>" class="card-img-top" alt="Listing-Image" style="height: 18rem;">
  <!-- <div class="card-img-overlay">asdfasasasasas</div> -->
  <div class="card-body">
    <p class="card-text"><b><%=listing.title %></b></p>
    <p class="card-text">&#8377; <%=listing.price.toLocaleString("en-IN") %> /night</p>
  </div>
</div>
</a>

 <% }%>
    </div>


